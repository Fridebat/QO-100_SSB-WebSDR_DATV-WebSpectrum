sudo apt-get update
sudo apt-get -y install libasound2-dev libfftw3-dev apache2 sndfile-tools libsndfile1-dev php librtlsdr-dev build-essential libxml2-dev bison flex libcdk5-dev cmake libaio-dev libusb-1.0-0-dev libserialport-dev libavahi-client-dev git libad9361-dev
git clone https://github.com/analogdevicesinc/libiio.git
cd libiio
mkdir build
cd build
cmake ../
make -j$(nproc)
sudo make install
